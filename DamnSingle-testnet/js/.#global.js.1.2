 * 主界面加载完毕之后，加载其余界面的js和css
 */
var loadModule = function () {
    for (var i = 0; i < Config.pages.length; i++) {
        dynamicLoading.css("./module/" + Config.pages[i] + "/css/" + Config.pages[i] + ".css");
        dynamicLoading.js("./module/" + Config.pages[i] + "/" + Config.pages[i] + ".html.js");
        dynamicLoading.js("./module/" + Config.pages[i] + "/js/" + Config.pages[i] + ".js");
    }
};

var showWaitView = function () {
    var wait = document.getElementById("div-wait-view");
