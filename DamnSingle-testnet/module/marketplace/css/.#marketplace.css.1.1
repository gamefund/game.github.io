body {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0;
    margin: 0;
}

.marketplace-container {
    position: absolute;
    top: 10vh;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0;
    margin: 0;
    font-size: 1.2rem;
}

.marketplace-container .marketplace-classify {
    display: flex;
    margin: 0 auto;
    width: 85%;
    height: 8vw;
    background-color: hotpink;
    border-radius: 5vw;
}

.marketplace-container .classify-area {
    flex: 1;
    font-size: 1.4rem;
    text-align: center;
    height: 7vw;
    line-height: 7vw;
    margin: 0.6vw 0.5vw 0;
    color: #fff;
    background-color: hotpink;
    border-radius: 5vw;
}

.marketplace-container .marketplace-classify .classify-title-active {
    background-color: #fff;
    border-radius: 5vw;
    color: hotpink;
}

.marketplace-container .marketplace-search-filter {
    display: flex;
    height: 8vw;
    margin: 2vh 7.5vw;
}

.marketplace-container .marketplace-search-filter .marketplace-search {
    flex: 50%;
    height: 7.6vw;
}

.marketplace-container .marketplace-search-filter .marketplace-filter {
    flex: 50%;
    text-align: right;
    height: 7.6vw;
    line-height: 7.6vw;
    font-size: 1.4rem;
    text-decoration: underline;
}

.marketplace-container .marketplace-search-filter .marketplace-search input {
    width: 96%;
    height: 6.6vw;
    line-height: 6.6vw;
    border: 1px solid hotpink;
    font-size: 1.4rem;
    padding-left: 3%;
}

.marketplace-container .marketplace-number-sortby {
    display: flex;
    height: 8vw;
    margin: 2vh 7.5vw;
}

.marketplace-container .marketplace-number-sortby .searchOrFilter-number {
    flex: 50%;
    text-align: right;
    height: 7.6vw;
    line-height: 7.6vw;
    font-size: 1.4rem;
}

.marketplace-container .marketplace-number-sortby .searchOrFilter-number span {
    font-size: 1.4rem;
}

.marketplace-container .marketplace-number-sortby .marketplace-sortby {
    flex: 50%;
    height: 7.6vw;
}

.marketplace-container .marketplace-number-sortby .marketplace-sortby select {
    width: 100%;
    height: 7.6vw;
    line-height: 7.6vw;
    border: 1px solid hotpink;
    font-size: 1.4rem;
}

.marketplace-container .marketplace-content-library {
    margin-top: 12vw;
}

.marketplace-container .marketplace-content-library .library-container {
    padding: 0 7.5vw;
}

.marketplace-container .marketplace-content-library .library-container .kitty-library {
    /*margin-top: 6vw;*/
}

.kitty-library-item {}

.kitty-library-item .kitty-item-container {}

.kitty-library-item .kitty-item-container .kitty-item {
    height: 85vw;
    background-color: #ea927c;
}

.kitty-library-item .kitty-item-container .kitty-item .kitty-item-photo {
    background-image: url(http://192.168.1.151:8080/kitties/111.png);
    height: 74vw;
    position: relative;
    top: 10vw;
    background-position: center center;
    background-repeat: no-repeat;
}

.kitty-item-newBadge {
    float: left;
    width: 12vw;
    height: 12vw;
}

.kitty-item-newBadge .triangle-newBadge {
    width: 0;
    height: 0;
    border-top: 12vw solid hotpink;
    border-right: 12vw solid transparent;
}

.kitty-item-newBadge .triangle-newBadge .triangle-text {
    filter: progid:DXImageTransform.Microsoft.Matrix(M11=0.7, M12=-0.7, M21=0.7, M22=0.7, SizingMethod="auto expand");
    -moz-transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    position: relative;
    bottom: 7vw;
    left: 1.5vw;
    font-size: 1.4rem;
    color: #fff;
    font-weight: bold;
}

.kitty-item-status {
    position: relative;
    width: 50vw;
    margin: 0 auto;
    padding: 3vw;
}

.kitty-item-status .status-item {
    height: 9vw;
    line-height: 9vw;
    margin: 0 auto;
    border: 1px solid #fff;
    background-color: #fff;
    border-radius: 5vw;
    text-align: center;
}

.kitty-item-status .status-item span {
    font-size: 1.4rem;
}

.kitty-library-item .kitty-item-details {
    height: 6vw;
    line-height: 6vw;
    margin-top: 2vw;
}

.kitty-library-item .kitty-item-details span {
    font-size: 1.4rem;
}

.kitty-library-item .kitty-item-actions {
    height: 6vw;
    line-height: 6vw;
    margin-bottom: 6vw;
}

.kitty-library-item .kitty-item-actions span {
    font-size: 1.4rem;
}

.marketplace-filter-displayArea {
    position: absolute;
    top: 30vh;
    left: 0;
    right: 0;
    background-color: #fff;
    /* width: 89%; */
    padding: 5vw 5vw;
    color: #000;
    border: 1px solid #ccc;
    display: none;
}

.marketplace-filter-displayArea .filter-group {
    margin: 2vw auto;
}

.marketplace-filter-displayArea .filter-group .filter-group-title {
    font-weight: bold;
    margin-bottom: 2vw;
}

.marketplace-filter-displayArea .filter-group .filter-group-content {
    margin-left: 6vw;
}

.marketplace-filter-displayArea .filter-group .filter-group-content-flex {
    margin-left: 6vw;
    display: flex;
}

.marketplace-filter-displayArea .filter-group .filter-group-content .filter-group-content-left,
.filter-group-content-right {
    flex: 1;
}