.div-login-mnemonic-body {
    width: 100vw;
    height: 100vh;
    position: absolute;
    background: rgba(0,0,0,0.2);
    z-index: 15;
}

.div-login-mnemonic {
    width: 80vw;
    height: 40vh;
    left: 50%;
    position: absolute;
    transform: translate(-50%, -50%);
    top: 50%;
    background: whitesmoke;
    border-radius: 3vw;
}

.div-login-mnemonic-close {
    height: 4vh;
    float: right;
    background: url(../images/close.png);
    background-size: contain;
    background-repeat: no-repeat;
    width: 7vw;
    height: 7vw;
    margin: 2vw;
}

.div-login-mnemonic-msg {
    margin: 14vw 7vw 3vw 7vw;
    font-size: 1.325rem;
}

.div-login-mnemonic-content {
    word-wrap: break-word;
    overflow: hidden;
    word-break: break-all;
    text-align: center;
    width: 90%;
    height: 50%;
    margin: auto;
}

.div-login-mnemonic-text {
    width: 96%;
    height: 96%;
    outline: none;
    resize: none;
}